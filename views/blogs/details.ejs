<%- include('../header.ejs') %>

<section id="blog">
  <div class="container">
    <div class="header-blog">
      <div class="btn">
        <a href="/blogs" class="">Back to Blogs</a>
      </div>
    </div>
    <div class="content-blog">
      <div class="row">
        <div class="blog-details">
          <div class="blog-title">
            <h1><%= blog.title %></h1>
          </div>
          <div class="blog-content">
            <div class="blog-image">
              <img src="/images/<%= blog.image %>" alt="<%= blog.title %>" />
            </div>
            <p><%= blog.content %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../footer.ejs') %>
