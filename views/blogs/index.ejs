<%- include('../header.ejs') %>


<section id="blog">
    <div class="container">
        <div class="header-blog">
            <div class="btn">
                <a href="/blogs/create" class="">Create Blog</a>
            </div>
        </div>
        <div class="content-blog">
            <div class="row">
                <% blogs.forEach(blog => { %>
                <div class="container">
                    <div class="card">
                        <div class="card-header">
                            <h3><%= blog.title %></h3>
                        </div>
                        <div class="card-body">
                            <p><%= blog.snippet %></p>
                        </div>
                        <div class="card-footer">
                            <a href="/blogs/<%= blog.id %>" class="btn">Read More</a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
    </div>
</section>

<%- include('../footer.ejs') %>